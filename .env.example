# MoneyWiz MCP Server Configuration
# Copy this file to .env and update with your settings

# Required: Path to your MoneyWiz SQLite database
# The server will attempt auto-detection if not set
MONEYWIZ_DB_PATH=/path/to/your/MoneyWiz.sqlite

# Optional: Enable read-only mode for safety (default: true)
# Set to false only if you need write operations
MONEYWIZ_READ_ONLY=true

# Optional: Cache settings
CACHE_TTL=300

# Optional: Query limits
MAX_RESULTS=1000

# Optional: Backup settings
BACKUP_BEFORE_WRITE=true

# Optional: Logging level
LOG_LEVEL=INFO